<!DOCTYPE html>
<html>
  <head>
    <title>EigoMonsters</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700,900&display=swap" rel="stylesheet">
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to "EigoMonsters", root_path, method: :get, class: :meirio %>
          </div>
          <div class="nav__center">
              <%= link_to "HOME", eigomonsters_path, method: :get, class: :nav__btn %>
              <%= link_to "タイピングゲーム", typingplay_index_eigomonsters_path, method: :get, class: :nav__btn %>
              <%= link_to "英単語リスト", eng_wordlist_index_eigomonsters_path, method: :get, class: :nav__btn %>
              <%= link_to "EigoMonstersとは", about_eigomonsters_path, method: :get, class: :nav__btn %>
              <%= link_to "お問い合わせ", contacts_path, class: :nav__btn %>
              <%= link_to 'https://twitter.com/eigomonsters',target: :blank, rel: :noopener, rel: :noreferrer do %><%= image_tag 'twitterImage.png', class: :snsIconTwitter%> <% end %>
          </div>
        </div>
      </div>
    </header>
      <%= yield %>
    <footer class="footer">
        <%= link_to "ご利用規約・プライバシーポリシー", policy_eigomonsters_path, method: :get, class: :policy %>
        <p class="copyright">Copyright ©EigoMonsters All rights reserved.</p>
    </footer>
  </body>
</html>
