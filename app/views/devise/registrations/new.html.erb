<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_nickname", autofocus: true, autocomplete: "nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :family_name_kanji, "お名前(全角)" %><br />
          <%= f.text_field :family_name_kanji, id:"user_family_name_kanji" %>
          <%= f.text_field :given_name_kanji, id:"user_given_name_kanji" %>
        </div>

        <div class="field">
          <%= f.label :family_name_kana, "お名前カナ(全角)" %><br />
          <%= f.text_field :family_name_kana, id:"user_family_name_kana" %>
          <%= f.text_field :given_name_kana, id:"user_given_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :gender, "性別" %><br />
          <%= f.text_field :gender, id:"user_gender" %>
        </div>

        <div class="field">
          <%= f.label :birthday, "生年月日" %><br />
          <%= f.text_field :birthday, id:"user_birthday" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>